$primaryColor = #d1a74f;
$primaryBlue = #1e51a4;
$primaryGray = #9d9d9d;

html
    scroll-behavior smooth

body
    font-family "Rubik", sans-serif

.noshadow
    box-shadow none

.flex
    display flex
    flex-wrap wrap
.container
    width 90%
.hero
    width 100%
    height auto
    min-height 100vh
    background-color #222
    background-image url("../assets/img/alexandru-acea-582050-unsplash-min.jpg")
    background-size cover
    background-repeat no-repeat
    position relative
    &:after
        content ""
        position absolute
        width 100%
        height 100%
        background-color rgba(0,0,0,.7)
        top 0
        left 0
        z-index 0
    .container
        z-index 1
        width 90%
    nav
        padding-top 30px
        ul
            li
                a
                    &:hover
                        background-color rgba(0,0,0,0)
        a
            text-transform uppercase
            font-family "Rubik", sans-serif
            letter-spacing 3px
            font-size 0.8em
        .login-btn
            span
                background-color $primaryColor;
                border-radius 30px
                padding 10px 25px
    .brand-logo
        img
            width auto
            height 65px
            padding 10px
            margin-top 10px
    .heroContainer
        z-index 1
        position relative
        h1
            font-family "Rubik",sans-serif
            font-weight 100
            color white
    .sliderX
        position relative
        z-index 2
        padding-bottom 130px
        .slideOne
            border-bottom 5px solid $primaryColor
            p
                padding-bottom 20px
        .slideTwo
            border-bottom 5px solid transparent
            p
                padding-bottom 20px
        .slideThree
            border-bottom 5px solid transparent
            p
                padding-bottom 20px
        .col
            cursor pointer
        .active,.active1,.active2
            height 5px
            width 100%
            background-color $primaryColor
            margin-top 40px
        p,i
            color white
        p
            font-family "Rubik", sans-serif

.p130
    padding 130px 0
    hr
        margin 60px 0.75rem 40px 0.75rem
        height 1px
        border none
        background-color $primaryGray
        outline none

.gs-btn
    background-color $primaryBlue
    border-radius 30px
    padding 15px 35px
    text-transform uppercase
    font-family "Rubik", sans-serif
    letter-spacing 3px
    font-size 0.8em
    color white
    box-shadow 0 10px 35px rgba(0,0,0,.3)
    transition all .3s
    &:hover
        box-shadow 0 15px 55px rgba(0,0,0,0.6)
        transform scale(1.1)
.ddmH
    font-family "Rubik", sans-serif
    font-weight 500
.ddmP
    font-family "Rubik", sans-serif
    font-size 1.4em
    padding-bottom 40px
    color $primaryGray
.triFeatures
    span
        text-transform uppercase
        font-family "Rubik", sans-serif
        letter-spacing 3px
        font-size 0.9em
        font-weight 500
    p
        color $primaryGray
        font-family "Rubik", sans-serif
        font-weight 400

.blockSupport
    background-color $primaryColor
    background-image url('../assets/img/pattern.svg')
    background-attachment fixed
    background-repeat repeat
    background-size auto
    font-family "Rubik", sans-serif
    text-align center
    position relative
    z-index 0
    height auto
    &:after
        content ""
        position absolute
        background radial-gradient(ellipse at center, rgba(209,167,79,1) 0%,rgba(209,167,79,.2) 100%)
        z-index 1
        width 100%
        height 100%
        top 0
        left 0
    .content
        z-index 2
        position relative
    i
        font-size 5em !important
        color white
        display block
        padding-bottom 0.5em
    span
        letter-spacing 5px
        font-weight 400
    p
        display block
        margin auto
        width 50%
        color #666
        margin-bottom 40px
    .chatNow
        color #343434 !important
        border 2px solid white
        padding 15px 30px
        border-radius 30px
        text-transform uppercase
        font-weight 500
        letter-spacing 5px
        transition all .7s
        box-shadow 0 10px 35px rgba(0,0,0,0)
        &:hover
            background-color white
            box-shadow 0 5px 15px rgba(0,0,0,.3)
    .valign-wrapper
        height auto
        min-height 80vh
        padding 10vh 0
.laptop
    width 100%
    height auto
    margin-top -133.3px
footer
    padding 130px 0
    font-family "Rubik", sans-serif
    .col
        border-right 1px solid rgba(0,0,0,.1)
    .col:nth-last-child(4)
        border-right none
    .col:nth-last-child(2)
        text-align left
    .col:nth-last-child(1)
        border-right none
    .logo
        width 75%
        height auto
    p
        color $primaryGray
    h5
        font-family "Rubik", sans-serif
        margin 0
        padding 0
        font-weight 300
        color $primaryBlue
    li
        line-height 40px
    .quickLinks
        li
            transition all .2s ease-in-out
            border-left 3px solid transparent
            &:hover
                border-left 3px solid #1e51a4
                margin-left -10px
                padding-left 20px
                a
                    color #343434 !important
        a
            color $primaryGray !important
            text-decoration none
    hr
        margin 15px 0
        height 1px
        border none
        background-color rgba(0,0,0,.1)
        outline none
    .socialIconsFooter
        img
            width 40px
            opacity .5
            transition all .5s ease-in-out
            margin-right 10px
            &:hover
                opacity 1
        li
            display inline-block
.copyright
    width 100%
    background #e5e5e5
    padding 40px 0
    text-align center
    color #666
    font-family "Rubik", sans-serif
.contactBg
    background-image url('../assets/img/alvaro-reyes-500037-unsplash.jpg') !important
.servicesBg
    background-image url('../assets/img/rawpixel-423665-unsplash.jpg')
    background-size cover
    background-repeat no-repeat
    width 100%
    height 80vh
    border-radius 0 0 100% 50%
    background-attachment fixed
    position relative
    &:after
        content ""
        position absolute
        height 100%
        width 100%
        top 0
        left 0
        z-index 0
        background-color rgba(0,0,0,.7)
        border-radius 0 0 100% 50%
    .heroX
        width 100%
        height auto
        min-height 100vh
        position relative
        &:after
            content ""
            position absolute
            width 100%
            height 100%
            top 0
            left 0
            z-index 0
        .container
            z-index 1
            width 90%
        nav
            padding-top 30px
            ul
                li
                    a
                        &:hover
                            background-color rgba(0,0,0,0)
            a
                text-transform uppercase
                font-family "Rubik", sans-serif
                letter-spacing 3px
                font-size 0.8em
            .login-btn
                span
                    background-color $primaryColor;
                    border-radius 30px
                    padding 10px 25px
        .brand-logo
            img
                width auto
                height 65px
                padding 10px
                margin-top 10px
        .heroContainer
            z-index 1
            position relative
            h1
                font-family "Rubik",sans-serif
                font-weight 100
                color white
            p
                font-family "Rubik",sans-serif
                color rgba(255,255,255,.7)
            .xDivider
                width 80px
                height 5px
                background-color $primaryColor
.p120-0
    padding 80px 0

.services
    margin-top 80px
    h5
        text-align center
        color $primaryGray
        min-height 55px
    p
        text-align center
        min-height 160px
        opacity .6
        padding-bottom 40px
    .p120-0
        .col
            border-right 1px solid rgba(0,0,0,.2)
            padding 80px 50px
            transition all .5s ease-in-out
            &:hover
                img
                    opacity 1
                h5
                    color $primaryBlue
                p
                    opacity 1
            img
                display block
                margin auto
                width 25%
                height auto
                position relative
                opacity .5
                &:after
                    content ""
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background-color red
        .col:nth-last-child(1)
            border-right none
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(2)
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(3)
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(4)
            border-right none
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(5)
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(6)
            border-top 1px solid rgba(0,0,0,.2)
        .col:nth-last-child(7)
            border-right none
        .sr-btn
            background-color $primaryGray
            border-radius 30px
            padding 15px 35px
            text-transform uppercase
            font-family "Rubik", sans-serif
            letter-spacing 3px
            font-size 0.8em
            color #fff
            box-shadow 0 10px 35px rgba(0,0,0,0.3)
            transition all 0.3s
            display block
            margin auto
            width 60%
            text-align center !important
            &:hover
                background-color $primaryColor

.dhGrid
    display grid
    grid-template-columns repeat(2, 1fr)
    div
        text-align center
        padding 100px 0
        font-family "Rubik", sans-serif
        img
            display block
            margin auto
            width auto
            height 80px
    .domain
        background-color $primaryBlue
        color white
    .hosting
        background-color $primaryColor

.contactDetails
    .col
        text-align center
        padding 80px 20px
    img
        width auto
        height 80px
        opacity .4
    h2
        font-weight 100
        color #343434
    h5
        color $primaryGray
        font-weight lighter

.modal
    top 0 !important
    width 100% !important
    height 100% !important
    max-height 100% !important
    h4
        color $primaryBlue
    p, li
        color $primaryGray
.modal-content
    padding 5% 10% 20% 10% !important
.modal-footer
    text-align center !important
    background-color $primaryColor !important

.ourClients
    padding 80px 0
    background-color #e5e5e5
    transition all .3s ease-in-out
    &:hover
        h4
            &:before
                background: $primaryColor
            &:after
                background: $primaryBlue
    .container
        position relative
    h4
        position relative
        &:before
            content ""
            position absolute
            width 100px
            height 10px
            background $primaryGray
            top 33%
            //margin-left 30px
            right 100px
        &:after
            content ""
            position absolute
            width 100px
            height 10px
            background $primaryGray
            top 33%
            //margin-left 30px
            right 0
    h5
        color $primaryGray
        margin-bottom 80px
    .clientLogos
        img
            display block
            width 100%
            filter grayscale(100)
            transition all .5s ease-in-out
            &:hover
                filter grayscale(0)
                transform scale(1.1)
                cursor pointer
    .cl-bt
        border-top 1px solid rgba(0,0,0,.1)
        border-right 1px solid rgba(0,0,0,.1)
        border-left 1px solid rgba(0,0,0,.1)
        padding-top 13px
    .cl-bb
        border-bottom 1px solid rgba(0,0,0,.1)
        border-right 1px solid rgba(0,0,0,.1)
        border-left 1px solid rgba(0,0,0,.1)
        padding-bottom 13px
    .viewMoreClients
        margin-top 80px
        text-align center
    .divider
        height 1px
        overflow hidden
        background-color rgba(0,0,0,.1)
        margin 20px 0

@media only screen and (max-width : 768px)
  .dhGrid
    display grid
    grid-template-columns repeat(1, 1fr)
  .sliderX
    .col
      margin 20px 0
  .blockSupport
    p
      max-width 90%
  .copyright
    max-width 90%
